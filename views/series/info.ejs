<%- include('../partials/header.ejs') %>

     <section id="about">
      <div class="container">
        <div class="row">
          <div class="col-lg-8 mx-auto">
            <form method='post'>
              <h2>Sobre a série: <%= serie.name %></h2>
              <div class="form-group">
                Nome da Série: <%= serie.name %><br>
              </div>
              <textarea class='form-control' name="comentario"></textarea><br />
              <input type='submit' value='Adicionar comentário' class="btn btn-info">
            </form>
            <br />
            <% serie.comments.forEach( c => { %>
              <div class='card'><%= c %></div>
            <% }) %>
            
          </div>
        </div>
      </div>
    </section>

