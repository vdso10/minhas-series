<%- include('../partials/header.ejs') %>

     <section id="about">
      <div class="container">
        <div class="row">
          <div class="col-lg-8 mx-auto">
            <form method='post'>
              <h2>Nova Serie</h2>
              <div class="form-group">
                <label for="name">Nome da Série:</label>
                <input name="name" type="text" class="form-control" id="name" aria-describedby="nameHelp" placeholder="Informe o nome">
                
                <% if(errors && errors.indexOf('name') >= 0) { %>
                  <small id="nameHelp" class="form-text text-muted">
                    Por favor, informe o nome da série
                  </small>
                <% } %>
              </div>
              <div class="form-group">
                <label for="status">Situação</label>
                <select class="form-control" id="status" name="status">
                  <option value="to-watch">Para assistir</option>
                  <option value="watching">Assistindo</option>
                  <option value="watched">Assistido</option>
                </select>
              </div>
              <button class='btn btn-primary'>Salvar</button>
            </form>
          </div>
        </div>
      </div>
    </section>

   <%- include('../partials/footer') %>
